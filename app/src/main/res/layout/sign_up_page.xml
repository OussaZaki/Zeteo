<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical"
    android:layout_centerInParent="true"
    android:background="@drawable/sign_up_bg"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#ff333333"
        android:textSize="50sp"
        android:layout_gravity="center_vertical"
        android:text="ZETEO"
        android:id="@+id/logo"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center" />

    <LinearLayout
        android:id="@+id/sign_up"
        android:orientation="vertical"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <app.meditel.zeteo.StyledEditText
            android:id="@+id/user_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textColor="#ff333333"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:background="@null"
            android:singleLine="true"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789-."
            android:imeOptions="actionNext"
            android:hint="USER NAME"
            android:padding="6dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#ff333333" />

        <app.meditel.zeteo.StyledEditText
            android:layout_marginTop="15dp"
            android:id="@+id/password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:imeOptions="actionNext"
            android:password="true"
            android:singleLine="true"
            android:textColor="#ff333333"
            android:hint="PASSWORD"
            android:padding="6dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#ff333333" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:visibility="invisible"
            android:orientation="vertical"
            android:id="@+id/confirm_password"
            android:layout_height="wrap_content">

            <app.meditel.zeteo.StyledEditText
                android:layout_marginTop="15dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionGo"
                android:background="@null"
                android:id="@+id/confirm_password1"
                android:singleLine="true"
                android:password="true"
                android:textColor="#ff333333"
                android:hint="CONFIRM PASSWORD"
                android:padding="6dp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#ff333333" />
        </LinearLayout>

        <TextView
            android:onClick="logInSignUp"
            android:background="@drawable/round_rect"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:text="LOG IN"
            android:textSize="20dp"
            android:id="@+id/start"
            android:clickable="true"
            android:textColor="#ffcdcdcd"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center" />

        <TextView
            android:onClick="toggleLogIn"
            android:layout_width="fill_parent"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:text="Already a member?   LOG IN"
            android:clickable="true"
            android:textSize="16sp"
            android:id="@+id/islogin"
            android:fontFamily="sans-serif-condensed"
            android:gravity="bottom|center" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#ff333333"
        android:textSize="50sp"
        android:id="@+id/anim"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:layout_gravity="bottom" />

</LinearLayout>